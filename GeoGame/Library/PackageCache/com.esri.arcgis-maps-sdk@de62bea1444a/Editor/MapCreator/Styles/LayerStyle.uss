.add-data-foldout .unity-label {
	min-width: 120px;
}

.add-data-button-holder {
	flex-direction: row;
	justify-content: flex-end;
	margin-top: 2px;
}

.add-data-holder-spacer {
	flex: 3 0;
}

.button-add-data {
	flex: 1 0;
}

.foldout-layer-row {
	margin-bottom: -5px;
}

.foldout-layer-row > .unity-foldout__toggle .unity-toggle__input {
	margin-left: 3px;
	padding-top: 3px;
	padding-bottom: 3px;
	border-top-width: 1px;
	border-top-color: black;
	border-bottom-width: 1px;
	border-bottom-color: rgb(45,45,45);
	background-color: #303030;
}

.foldout-layer-row .unity-foldout__content {
	margin-right: 20px;
	margin-bottom: 8px;
}

.foldout-layer-row .config-text {
	margin-top: 1px;
}

.layer-name-holder {
	flex-direction: row;
	margin-bottom: -10px;
	flex: 1 0;
}

.layer-name-holder Label {
	flex: 1 0;
	padding-top: 1px;
}

.layer-name-holder TextField {
	flex: 1 0;
	margin-top: -2px;
	margin-left: -2px;
	height: 18px;
}

.layer-name-holder .unity-toggle {
	margin: 0px;
	margin-top: -9px;
	margin-right: 6px;
	margin-left: 6px;
}

.layer-name-holder .unity-toggle .unity-toggle__input {
	background-color: transparent;
	border-color: transparent;
	border-width: 0px;
}

.layer-opacity-holder {
	flex-direction: row;
}

.layer-opacity-slider {
	flex: 4 0;
}

.layer-opacity-slider .unity-label {
	min-width: 166px;
}

.layer-opacity-field {
	flex: 1 0;
}

.layer-type-selector {
	margin-top: 2px;	
	margin-bottom: 2px;
}

.layer-source-selector-holder .unity-label {
	min-width: 165px;
}

.layer-options-dropdown {
	max-width: 160px;
	min-width: 160px;
	background-color: white;
	justify-content: flex-end;
	align-self: flex-end;
	padding-left: 20px;
	min-height: 167px;
	max-height: 167px;
	position: absolute;
}

.layer-options-dropdown-auth {
	min-height: 110px;
	max-height: 110px;
}

.layer-options-dropdown Button {
	background-color: transparent;
	color: #3F3F3F;
	margin-top: 4px;
	margin-bottom: 4px;
	-unity-text-align: middle-left;
	font-size: 12px;
	border-radius: 0px;
	border-width: 0px;
	padding-top: 2px;
}

.layer-options-dropdown-bar {
	border-color: #ADADAD;
	border-top-width: 1px;
	height: 1px;
	flex: 1 0;
	margin-right: 4px;
}

.layer-options-dropdown Button:hover {
	background-color: #91C9F7;
}

#api-key-documentation-holder {
	margin-top: 10px;
	margin-right: 3px;
	border-width: 1px;
	border-color: black;
	padding: 6px;
	background-color: var(--unity-colors-inspector_titlebar-background);
	overflow: hidden;
}
